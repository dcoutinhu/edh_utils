<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlanechaseActivity">

    <TextView
        android:id="@+id/planechase_activity_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/planechase_activity_header_text"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintVertical_bias="0.05"
        />

    <ImageView
        android:id="@+id/planechase_activity_plane_background"
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:src="@drawable/pools_of_becoming"
        app:layout_constraintTop_toBottomOf="@id/planechase_activity_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>
    
    <ImageButton
        android:id="@+id/planechase_activity_flip_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/chaossymbol"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@id/planechase_activity_plane_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/planechase_activity_action_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/planechase_activity_action_text"
        android:textColor="@color/red"
        android:textSize="40dp"
        app:layout_constraintTop_toTopOf="@id/planechase_activity_plane_background"
        app:layout_constraintStart_toStartOf="@id/planechase_activity_plane_background"
        app:layout_constraintEnd_toEndOf="@id/planechase_activity_plane_background"
        app:layout_constraintBottom_toBottomOf="@id/planechase_activity_plane_background"
        android:rotation="-90"
        />

</androidx.constraintlayout.widget.ConstraintLayout>