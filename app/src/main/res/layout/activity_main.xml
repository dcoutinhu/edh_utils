<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_activity_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_acitivity_header_text"
        android:textSize="45sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12" />

    <ImageView
        android:id="@+id/main_activity_coins"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="190dp"
        android:scaleType="fitXY"
        android:src="@drawable/krark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_activity_header" />

    <ImageView
        android:id="@+id/main_activity_planechase"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="190dp"
        android:scaleType="fitXY"
        android:src="@drawable/planeswalkersymbol"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="10dp"
        app:layout_constraintStart_toEndOf="@id/main_activity_coins"
        app:layout_constraintTop_toBottomOf="@+id/main_activity_header" />

    <TextView
        android:id="@+id/main_activity_coins_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:text="@string/main_acitivity_coins_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_activity_coins"
        app:layout_constraintVertical_bias="0.08"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/main_activity_planechase_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="241dp"
        android:text="@string/main_acitivity_planechase_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_activity_coins"
        app:layout_constraintVertical_bias="0.08"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>